<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">@color/text_primary</color>
    <color name="brand_background">#F5F7FA</color>
    <color name="brand_primary">#1A237E</color>
    <color name="brand_secondary">#00B0FF</color>
    <color name="card_background">#FFFFFF</color>
    <color name="divider">#BDBDBD</color>
    <color name="ic_launcher_background">#FFFFFF</color>
    <color name="purple_200">@color/brand_secondary</color>
    <color name="purple_500">@color/brand_primary</color>
    <color name="purple_700">#0D47A1</color>
    <color name="state_locked">#D32F2F</color>
    <color name="state_unlocked">#388E3C</color>
    <color name="state_warning">#FFA000</color>
    <color name="teal_200">@color/brand_secondary</color>
    <color name="teal_700">#0091EA</color>
    <color name="text_primary">#212121</color>
    <color name="text_secondary">#757575</color>
    <color name="text_white">#FFFFFF</color>
    <color name="white">@color/text_white</color>
    <string name="app_name">Security App</string>
    <string name="camera_permission_required">Camera permission is required to scan QR codes</string>
    <string name="device_admin_description">Required to lock/unlock camera based on location.</string>
    <string name="device_admin_label">Camera Lock Admin</string>
    <string name="device_info_label">Device Info</string>
    <string name="facility_info_label">Facility Info</string>
    <string name="info_camera_locked">Camera is currently locked for security.</string>
    <string name="info_camera_unlocked">Camera is currently unlocked and available for use.</string>
    <string name="scan_entry">Scan Entry QR</string>
    <string name="scan_exit">Scan Exit QR</string>
    <string name="settings">Settings</string>
    <string name="status_label">Status: </string>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ButtonStyle.Entry">
        <item name="backgroundTint">@color/brand_primary</item>
    </style>
    <style name="ButtonStyle.Exit">
        <item name="backgroundTint">@color/state_unlocked</item>
    </style>
    <style name="ButtonStyle.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/brand_primary</item>
        <item name="android:textColor">@color/brand_primary</item>
    </style>
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/brand_primary</item>
        
        
        <item name="android:windowSplashScreenBackground">@color/brand_primary</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo_jabil_splash</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/logo_jabil_splash</item>
    </style>
    <style name="Theme.CameraLockDemo" parent="Theme.MaterialComponents.Light.NoActionBar">
        
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryVariant">@color/brand_primary</item>
        <item name="colorOnPrimary">@color/text_white</item>
        
        
        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorSecondaryVariant">@color/brand_secondary</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        
        
        <item name="android:statusBarColor">@color/brand_primary</item>
        
        
        <item name="android:windowBackground">@color/brand_background</item>
    </style>
</resources>